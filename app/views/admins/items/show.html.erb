<div>
  <h3><商品詳細></h3>

<div>
   <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "300x300" %>
   <% else %>
    <%= image_tag 'no_image', size: "300x300" %>
   <% end %>
</div>

<div>
  <br><br><br><br>
<div>
  <tbody>

    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>

    </tr>
    <tr>
      <td>ジャンル</td>
       <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>
        <div>
          税込価格<br>
          (税抜価格)
        </div>
      </td>
      <td><%= @item.add_tax_price.to_s(:dalimited) %>,（<%= @item.price %>）円</td>

    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><% if @item.is_active == false %>
              販売中
              <% else %>
              販売停止中
             <% end %>
      </td>
    </tr>
    <tr>
      <td><%= link_to "Edit", edit_admins_item_path(@item) %></td>
    </tr>

  </tbody>
</table>

</div>
</div>
</div>